# NPM Configuration
# This file configures npm behavior

# Enable workspace support
workspaces-update=false
legacy-peer-deps=true

# Don't use workspace protocol on CI/deployment
# Vercel will use this configuration
# prefer-workspace-packages has been deprecated in npm v9

# Performance optimizations
fetch-retries=2
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Logging
loglevel=warn