{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build --workspace=apps/web",
  "outputDirectory": "apps/web/dist",
  "installCommand": "npm install",
  "regions": ["iad1", "sfo1", "sin1", "syd1", "fra1"],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api-penny.railway.app/api/:path*"
    },
    {
      "source": "/ws/:path*",
      "destination": "https://ws-penny.railway.app/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "api/auth/[...nextauth].ts": {
      "runtime": "edge",
      "maxDuration": 10
    },
    "api/proxy/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": "@railway_api_url",
    "NEXT_PUBLIC_WS_URL": "@railway_ws_url",
    "NEXT_PUBLIC_CDN_URL": "@cloudflare_cdn_url"
  }
}