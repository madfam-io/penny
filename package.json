{
  "name": "@penny/root",
  "version": "0.0.1",
  "description": "PENNY - Multi-tenant AI-first workbench platform",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=\\.test\\.(ts|tsx)$ --coverage",
    "test:integration": "jest --testPathPattern=\\.integration\\.test\\.(ts|tsx)$ --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:turbo": "turbo run test",
    "test:coverage": "jest --coverage --config jest.config.js",
    "test:integration:coverage": "jest --testPathPattern=\\.integration\\.test\\.(ts|tsx)$ --coverage --config jest.integration.config.js",
    "test:e2e:coverage": "cypress run --env coverage=true",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "coverage:clean": "node scripts/coverage.js clean",
    "coverage:merge": "node scripts/coverage.js merge",
    "coverage:check": "node scripts/coverage.js check",
    "coverage:badge": "node scripts/coverage.js badge",
    "coverage:markdown": "node scripts/coverage.js markdown",
    "coverage:report": "node scripts/coverage.js all",
    "coverage:merge:all": "nyc merge coverage coverage/merged.json",
    "coverage:report:final": "nyc report --reporter=html --reporter=lcov --reporter=text-summary --temp-dir=coverage --report-dir=coverage/final",
    "coverage:summary:markdown": "node -e \"const fs=require('fs'); const path='coverage/merged/coverage-summary.json'; if(fs.existsSync(path)) { const data=JSON.parse(fs.readFileSync(path)); const t=data.total; console.log('| Lines | Functions | Branches | Statements |'); console.log('|-------|-----------|----------|------------|'); console.log('| '+t.lines.pct+'% | '+t.functions.pct+'% | '+t.branches.pct+'% | '+t.statements.pct+'% |'); } else { console.log('Coverage data not found'); }\"",
    "db:migrate": "turbo run db:migrate",
    "db:migrate:test": "DATABASE_URL=$DATABASE_URL_TEST npx prisma migrate deploy",
    "db:seed": "turbo run db:seed",
    "db:seed:test": "DATABASE_URL=$DATABASE_URL_TEST node scripts/seed-test-db.js",
    "start:test": "NODE_ENV=test turbo run start --parallel",
    "job:cleanup": "node apps/worker/dist/jobs/cleanup.js",
    "job:metrics": "node apps/worker/dist/jobs/metrics.js",
    "job:usage": "node apps/worker/dist/jobs/calculateUsage.js",
    "job:invoices": "node apps/worker/dist/jobs/generateInvoices.js",
    "job:webhooks": "node apps/worker/dist/jobs/invokeWebhook.js",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules && npm run coverage:clean",
    "prepare": "husky install",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build --filter='./packages/*' && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@cypress/code-coverage": "^3.12.18",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "c8": "^8.0.1",
    "cypress": "^13.6.2",
    "cypress-terminal-report": "^5.3.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^9.0.10",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-instrument": "^6.0.1",
    "istanbul-reports": "^3.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "turbo": "^1.13.4",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "glob": "^10.0.0",
    "rimraf": "^5.0.0",
    "inflight": "npm:lru-cache@^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madfam-io/penny.git"
  },
  "keywords": [
    "ai",
    "assistant",
    "enterprise",
    "multi-tenant",
    "saas"
  ],
  "author": "MADFAM IO",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/madfam-io/penny/issues"
  },
  "homepage": "https://github.com/madfam-io/penny#readme"
}
