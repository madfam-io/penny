# WebSocket Server Configuration
WS_PORT=3003
WS_HOST=0.0.0.0
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=penny:ws:

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_AUDIENCE=penny-users
JWT_ISSUER=penny-auth

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting Configuration
RATE_LIMIT_GLOBAL_POINTS=1000
RATE_LIMIT_GLOBAL_DURATION=60000
RATE_LIMIT_GLOBAL_BLOCK=60000

RATE_LIMIT_SOCKET_POINTS=100
RATE_LIMIT_SOCKET_DURATION=60000
RATE_LIMIT_SOCKET_BLOCK=60000

RATE_LIMIT_ROOM_POINTS=500
RATE_LIMIT_ROOM_DURATION=60000
RATE_LIMIT_ROOM_BLOCK=60000

# Heartbeat Configuration
HEARTBEAT_INTERVAL=25000
HEARTBEAT_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=pretty

# Database Configuration (if needed)
DATABASE_URL=postgresql://postgres:password@localhost:5432/penny