# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://penny:penny@localhost:5432/penny
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis/Valkey
REDIS_URL=redis://localhost:6379
REDIS_TLS_ENABLED=false

# Authentication
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
SESSION_SECRET=change-this-in-production

# Security
MASTER_ENCRYPTION_KEY=change-this-32-byte-key-in-prod
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Object Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=penny-artifacts
S3_REGION=us-east-1

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=penny
OTEL_TRACES_ENABLED=true
OTEL_METRICS_ENABLED=true

# Model Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# Local Model Servers
OLLAMA_URL=http://localhost:11434
VLLM_URL=http://localhost:8000
TGI_URL=http://localhost:8080

# Feature Flags
ENABLE_CODE_EXECUTION=true
ENABLE_EXTERNAL_MODELS=false
ENABLE_CUSTOM_PLUGINS=false

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info
LOG_FORMAT=json