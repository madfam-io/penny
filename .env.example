# Environment Configuration
NODE_ENV=development

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://penny:penny_password@localhost:5432/penny_db?schema=public

# Redis/Valkey
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption Keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this-in-production

# AI Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=...

# OAuth Providers
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...
GITHUB_CLIENT_ID=...
GITHUB_CLIENT_SECRET=...

# S3/MinIO Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=penny-artifacts
S3_REGION=us-east-1

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@penny.ai

# Monitoring
SENTRY_DSN=
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Feature Flags
ENABLE_SANDBOX=true
ENABLE_EXTERNAL_MODELS=true
MAX_FILE_SIZE_MB=100
MAX_CONVERSATION_LENGTH=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Python Sandbox Configuration
PYTHON_SANDBOX_TIMEOUT_MS=30000
PYTHON_SANDBOX_MEMORY_MB=512

# Admin Configuration
ADMIN_EMAIL=admin@penny.ai
ADMIN_DEFAULT_PASSWORD=changeme123!

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Analytics (Optional)
POSTHOG_API_KEY=...
MIXPANEL_TOKEN=...