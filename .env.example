# PENNY Platform Environment Variables
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
LOG_LEVEL=info

# === VERCEL CONFIGURATION ===
# Frontend URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3002
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3003
NEXT_PUBLIC_CDN_URL=http://localhost:9000

# === RAILWAY CONFIGURATION ===
# API Service
API_PORT=3001
API_HOST=0.0.0.0

# WebSocket Service
WS_PORT=3003
WS_HOST=0.0.0.0

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:password@localhost:5432/penny_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis/Valkey
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# === CLOUDFLARE CONFIGURATION ===
# R2 Object Storage
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_ENDPOINT=https://[account-id].r2.cloudflarestorage.com
R2_PUBLIC_URL=https://cdn.penny.ai

# R2 Buckets
R2_ARTIFACTS_BUCKET=penny-artifacts
R2_UPLOADS_BUCKET=penny-uploads
R2_EXPORTS_BUCKET=penny-exports

# Cloudflare Workers
CF_ACCOUNT_ID=your-account-id
CF_API_TOKEN=your-api-token
CF_ZONE_ID=your-zone-id

# === AUTHENTICATION ===
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# === AI MODEL PROVIDERS ===
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=org-...
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GOOGLE_AI_API_KEY=...
GOOGLE_AI_MODEL=gemini-pro

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# === EXTERNAL SERVICES ===
# Jira Integration
JIRA_HOST=your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# Slack Integration
SLACK_BOT_TOKEN=xoxb-...
SLACK_APP_TOKEN=xapp-...
SLACK_SIGNING_SECRET=...

# Email (SendGrid/Resend)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG...
EMAIL_FROM=noreply@penny.ai

# === MONITORING & ANALYTICS ===
# Sentry
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ENVIRONMENT=development

# PostHog
POSTHOG_API_KEY=phc_...
POSTHOG_HOST=https://app.posthog.com

# Logflare
LOGFLARE_API_KEY=...
LOGFLARE_SOURCE_TOKEN=...

# === SECURITY ===
# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=60

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
CORS_CREDENTIALS=true

# Content Security Policy
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"

# === FEATURE FLAGS ===
FEATURE_PYTHON_SANDBOX=true
FEATURE_JIRA_INTEGRATION=true
FEATURE_SLACK_INTEGRATION=true
FEATURE_EXPORT_PDF=false
FEATURE_MARKETPLACE=false

# === SANDBOX CONFIGURATION ===
PYTHON_SANDBOX_TIMEOUT=30000
PYTHON_SANDBOX_MEMORY_LIMIT=512m
PYTHON_SANDBOX_CPU_LIMIT=1
PYTHON_SANDBOX_DOCKER_IMAGE=penny/python-sandbox:latest

# === DEVELOPMENT TOOLS ===
# Hot Reload
VITE_HMR_HOST=localhost
VITE_HMR_PORT=3000

# Debug
DEBUG=penny:*
DEBUG_HIDE_DATE=true